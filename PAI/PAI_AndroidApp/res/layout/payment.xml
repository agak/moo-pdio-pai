<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center" >

        <Button
            android:id="@+id/createPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40sp"
            android:text="@string/createTemplate" />

        <Button
            android:id="@+id/viewPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/viewTemplate" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="0.76" >

        <TextView
            android:id="@+id/paymentLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/emptyOperationLog"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </ScrollView>

    <Button
        android:id="@+id/commitPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commitTemplate" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_weight="0.36" >

        <TextView
            android:id="@+id/paymentResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="@string/responseTextEN"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </ScrollView>

</LinearLayout>